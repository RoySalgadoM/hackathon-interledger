{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "--debug", "--watch"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "HOST": "localhost",
        "CONTEXT_API": "/api/v1",
        "NAME_PROJECT": "API Gateway",
        "ENVIRONMENT": "development",
        "LOG_LEVEL": "debug",
        "LOG_FORMAT": "raw",
        "JWT_SECRET": "pr_x4_TM_MbwRPPEvwYIvKe00tE7Qh4m84wYwj9eWt_DKma7Gtn771xQQy2KKqLO",
        "JWT_ALGORITHM": "HS256",
        "JWT_AUD": "api://default",
        "JWT_ISS": "interledger-hackathon",
        "MAX_TOKEN_AGE": "3600",
        "PREAUTH_MS_URL": "http://localhost:3002/api/preauth",
        "ADMINISTRATION_MS_URL": "http://localhost:3001/api",
        "PLUGINS_PATH": "./src/001/plugins"
      },
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "killBehavior": "forceful",
      "preLaunchTask": "start:clean"
    },
    {
      "name": "Debug NestJS App (Production)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
